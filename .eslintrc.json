{
  "extends": ["airbnb","plugin:react/recommended"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "no-plusplus": 0,
    "no-debugger": 0,
    "no-console": 0,
    "new-cap": 0,
    "no-underscore-dangle": 0,
    "quotes": [2, "single"],
    "func-names": 0,
    "jsx-quotes": [1, "prefer-single"],
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/prefer-stateless-function": 0,
    "react/jsx-filename-extension":0
  }
}